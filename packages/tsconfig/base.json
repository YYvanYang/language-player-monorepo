{
    "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "useUnknownInCatchVariables": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "exactOptionalPropertyTypes": false,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedIndexedAccess": false,
      "noImplicitOverride": true,
      "noPropertyAccessFromIndexSignature": false,
  
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "baseUrl": ".",
      "resolveJsonModule": true,
  
      "noEmit": true,
      "isolatedModules": true,
  
      "allowJs": false,
      "checkJs": false,
  
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
  
      "target": "ES2020",
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "preserve",
  
      "skipLibCheck": true,
  
      "paths": {
        "@repo/api-client": ["./api-client/src/index.ts"],
        "@repo/auth": ["./auth/src/index.ts"],
        "@repo/query-client": ["./query-client/src/index.ts"],
        "@repo/ui": ["./ui/src/index.ts"],
        "@repo/utils": ["./utils/src/index.ts"],
        "@repo/types": ["./types/src/index.ts"]
      }
    },
    "exclude": ["node_modules", ".pnpm-store", "**/dist", "**/.next"]
  }